---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Patient Forms" description="Download patient forms and documents for Wright Wellness.">
  <section>
    <div class="wrap">
      <header>
        <h1>Patient Forms</h1>
      </header>
      
      <div class="grid cols-3" style="grid-template-columns: repeat(2, minmax(0, 1fr)); margin-bottom: 24px;">
        <a 
          href="/forms/english"
          class="card"
          style="text-decoration: none; text-align: center;"
        >
          <h3>English Forms</h3>
          <p style="color: var(--muted);">
            Notice of Privacy Practices, New Patient Packets, and more.
          </p>
          <span style="color: var(--brand-purple); font-weight: 600;">View Forms →</span>
        </a>
        
        <a 
          href="/forms/espanol"
          class="card"
          style="text-decoration: none; text-align: center;"
        >
          <h3>Formularios (Español)</h3>
          <p style="color: var(--muted);">
            Autorización, Consentimiento de Telesalud, y más.
          </p>
          <span style="color: var(--brand-purple); font-weight: 600;">Ver Formularios →</span>
        </a>
      </div>
      
      <div class="card" style="border-left: 4px solid #3b82f6; background: #dbeafe;">
        <p style="color: var(--ink); margin: 0;">
          <strong>Note:</strong> For fastest processing, use the <strong>Client Portal</strong> invite when available.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>

