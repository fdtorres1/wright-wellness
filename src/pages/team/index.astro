---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { teamMembers } from '../../data/team';
---

<BaseLayout title="Our Team" description="Meet the compassionate team at Wright Wellness dedicated to your mental health and wellness.">
  <section>
    <div class="wrap">
      <header>
        <h1>Our Team</h1>
        <p class="sub">Our diverse team of licensed professionals is committed to providing compassionate, evidence-based care to support your journey toward wellness.</p>
      </header>
      
      <div class="grid cols-3">
        {teamMembers.map((member) => (
          <a 
            href={`/team/${member.slug}`}
            class="card"
            style="text-decoration: none; display: block;"
          >
            {member.image ? (
              <div style="width: 128px; height: 128px; border-radius: 50%; margin: 0 auto 16px; overflow: hidden; display: flex; align-items: center; justify-content: center; background: var(--accent-olive);">
                <img 
                  src={member.image} 
                  alt={member.name}
                  style="width: 100%; height: 100%; object-fit: cover; transform: scale(1.1); object-position: center 10%;"
                />
              </div>
            ) : (
              <div style="width: 128px; height: 128px; background: var(--accent-olive); border-radius: 50%; margin: 0 auto 16px; display: flex; align-items: center; justify-content: center;">
                <span style="font-size: 2rem; color: var(--brand-green); font-weight: 600;">
                  {member.name.split(' ').map(n => n[0]).join('')}
                </span>
              </div>
            )}
            <h3 style="text-align: center; margin-bottom: 8px; color: var(--ink);">{member.name}</h3>
            <p style="text-align: center; color: var(--brand-purple); margin-bottom: 16px; font-size: 14px;">{member.title}</p>
            <p style="text-align: center; font-size: 14px; color: var(--muted);">{member.bio}</p>
          </a>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

