---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Yoga Services" description="Yoga services at Wright Wellness for wellness and mindfulness.">
  <section>
    <div class="wrap">
      <header>
        <h1>Yoga Services</h1>
      </header>
      
      <div class="card" style="margin-bottom: 24px; border-left: 4px solid #fbbf24; background: #fef3c7;">
        <p style="color: var(--ink); font-weight: 600; margin: 0;">
          ⚠️ Yoga services are currently unavailable. Services are paused pending updates.
        </p>
      </div>
      
      <div class="card" style="margin-bottom: 24px;">
        <p style="color: var(--muted);">
          We apologize for any inconvenience. Please check back for updates on when yoga services will resume.
        </p>
      </div>
      
      <div style="margin-top: 24px;">
        <a href="/services/overview" class="btn tertiary">← Back to Services</a>
      </div>
    </div>
  </section>
</BaseLayout>

