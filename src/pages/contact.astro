---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us" description="Contact Wright Wellness - Get in touch with our team.">
  <section>
    <div class="wrap">
      <header>
        <h1>Contact Us</h1>
      </header>
      
      <div class="grid cols-3" style="grid-template-columns: repeat(2, minmax(0, 1fr));">
        <!-- Contact Information -->
        <article class="card">
          <h3>Get in Touch</h3>
          
          <div style="margin-top: 24px;">
            <h4 style="font-weight: 600; margin-bottom: 8px; color: var(--ink);">Address</h4>
            <p style="color: var(--muted); margin-bottom: 16px;">
              1398 W. Mayfield Rd., Suite 220<br />
              Arlington, TX 76015
            </p>
          </div>
          
          <div>
            <h4 style="font-weight: 600; margin-bottom: 8px; color: var(--ink);">Phone/Text & Fax*</h4>
            <p style="color: var(--muted); margin-bottom: 16px;">
              Phone: <a href="tel:6827774325">682-777-4325</a><br />
              Fax: 877-805-4720
            </p>
          </div>
          
          <div>
            <h4 style="font-weight: 600; margin-bottom: 8px; color: var(--ink);">Email**</h4>
            <p style="color: var(--muted);">
              <a href="mailto:office@wrightwellness.me">office@wrightwellness.me</a>
            </p>
          </div>
        </article>
        
        <!-- Contact Form -->
        <article class="card">
          <h3>Send us a Message</h3>
          
          <!-- TODO: Replace YOUR_FORM_ID with your actual Formspree form ID -->
          <form 
            action="https://formspree.io/f/YOUR_FORM_ID" 
            method="POST"
            style="margin-top: 24px; display: flex; flex-direction: column; gap: 16px;"
          >
            <div>
              <label for="name" style="display: block; font-weight: 600; margin-bottom: 8px; color: var(--ink); font-size: 14px;">Name *</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                required
                style="width: 100%; padding: 10px 12px; border: 1px solid var(--line); border-radius: var(--radius-sm); font-family: inherit; font-size: 14px;"
              />
            </div>
            
            <div>
              <label for="email" style="display: block; font-weight: 600; margin-bottom: 8px; color: var(--ink); font-size: 14px;">Email *</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                required
                style="width: 100%; padding: 10px 12px; border: 1px solid var(--line); border-radius: var(--radius-sm); font-family: inherit; font-size: 14px;"
              />
            </div>
            
            <div>
              <label for="phone" style="display: block; font-weight: 600; margin-bottom: 8px; color: var(--ink); font-size: 14px;">Phone</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone"
                style="width: 100%; padding: 10px 12px; border: 1px solid var(--line); border-radius: var(--radius-sm); font-family: inherit; font-size: 14px;"
              />
            </div>
            
            <div>
              <label for="message" style="display: block; font-weight: 600; margin-bottom: 8px; color: var(--ink); font-size: 14px;">Message *</label>
              <textarea 
                id="message" 
                name="message" 
                rows="5" 
                required
                style="width: 100%; padding: 10px 12px; border: 1px solid var(--line); border-radius: var(--radius-sm); font-family: inherit; font-size: 14px; resize: vertical;"
              ></textarea>
            </div>
            
            <button 
              type="submit"
              class="btn primary"
              style="width: 100%;"
            >
              Send Message
            </button>
          </form>
          
          <p style="font-size: 12px; color: var(--muted); margin-top: 16px;">
            * Required fields<br />
            ** Please note: Email is not secure for sensitive information. For urgent matters, please call us.
          </p>
        </article>
      </div>
    </div>
  </section>
</BaseLayout>

